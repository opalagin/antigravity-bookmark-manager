{
    "manifest_version": 3,
    "name": "Smart Bookmark Manager",
    "version": "1.0",
    "description": "AI-powered personal knowledge base for your bookmarks.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "identity"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Smart Bookmark Manager"
    },
    "options_ui": {
        "page": "options.html"
    },
    "sidebar_action": {
        "default_panel": "sidebar.html",
        "default_title": "Smart Bookmarks",
        "default_icon": "icons/icon.png"
    },
    "host_permissions": [
        "http://localhost/*",
        "https://localhost/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}