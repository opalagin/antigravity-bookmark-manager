{
    "manifest_version": 3,
    "name": "Smart Bookmark Manager",
    "version": "1.0.7",
    "icons": {
        "48": "icons/icon.svg"
    },
    "description": "AI-powered personal knowledge base for your bookmarks.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "identity",
        "sidePanel"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Smart Bookmark Manager"
    },
    "options_ui": {
        "page": "options.html"
    },
    "side_panel": {
        "default_path": "sidebar.html"
    },
    "host_permissions": [
        "http://localhost/*",
        "https://localhost/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}